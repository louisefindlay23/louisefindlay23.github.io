---
layout: _base-layout.ejs
---
<head>
    <link rel="canonical" href="https://louisefindlay.com/{{ canonical_url }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" />
    <link rel="stylesheet" type="text/css" href="/css/blog.css">
    <link rel="stylesheet" type="text/css" href="/css/prism.css">
</head>
<main class="post-list">
    <article>
      <h2>{{ title }}</h2> 
      <p><time datetime><span class="bold">Date: </span>{{ page.date | readableDate }}</time></p>
      <img id="blog-hero" src="{{ hero_image }}" alt="{{ title }}">
      {{ content | safe }}
      <h3>Share {{ title }}</h3>
      <div class="flexcontainer">
        <a target="_blank" rel="noreferrer" href="{{ fb_link }}" aria-label=“Share on Facebook”>
            <i class="fab fa-facebook-square"></i>
        </a>
        <a target="_blank" rel="noreferrer" href="{{ ctt_link }}" aria-label=“Tweet”>
            <i class="fab fa-twitter-square"></i>
        </a>
        <a target="_blank" rel="noreferrer" href="{{ linkedin_link }}" aria-label=“Share on LinkedIn”>
            <i class="fab fa-linkedin"></i>
        </a>
      </div>
    </article>
</main>